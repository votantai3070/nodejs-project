<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Update Orchid</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="container mt-5">
      <a href="/users/orchids" class="btn btn-secondary mb-3">Back</a>
      <form method="post">
        <div class="mb-3 row">
          <label for="name" class="col-sm-2 col-form-label">Name</label>
          <div class="col-sm-10">
            <input
              class="form-control"
              name="name"
              type="text"
              value="<%= orchid.name %>"
              required
            />
          </div>
        </div>
        <div class="mb-3 row">
          <label for="image" class="col-sm-2 col-form-label">Image</label>
          <div class="col-sm-10">
            <input
              class="form-control"
              name="image"
              type="text"
              value="<%= orchid.image %>"
            />
          </div>
        </div>
        <div class="mb-3 row">
          <label for="price" class="col-sm-2 col-form-label">Price</label>
          <div class="col-sm-10">
            <input
              class="form-control"
              name="price"
              type="number"
              value="<%= orchid.price %>"
              required
            />
          </div>
        </div>
        <div class="mb-3 row">
          <label for="original" class="col-sm-2 col-form-label">Original</label>
          <div class="col-sm-10">
            <input
              class="form-control"
              name="original"
              type="text"
              value="<%= orchid.original %>"
              required
            />
          </div>
        </div>
        <div class="mb-3 row">
          <label for="category" class="col-sm-2 col-form-label">Category</label>
          <div class="col-sm-10">
          <select class="form-select w-auto" name="category" id="category" required>
            <% categories.forEach(function(category){ %>
              <option value="<%= category._id %>" <% if (category._id.toString() === orchid.category._id.toString()) { %> selected <% } %> >
                <%= category.categoryName %>
              </option>
            <% }) %>
          </select></div>
        </div>
      
        <div class="mb-3 row">
          <label for="isNatural" class="col-sm-2 col-form-label">Natural</label>
          <div class="col-sm-10">
            <select class="form-select w-auto" name="isNatural" id="isNatural">
              <% if (orchid.isNatural) { %>
              <option value="true" selected>Yes</option>
              <option value="false">No</option>
              <% } else { %>
              <option value="true">Yes</option>
              <option value="false" selected>No</option>
              <% } %>
            </select>
          </div>
        </div>
        <div class="mb-3 row">
          <div class="col-sm-10 offset-sm-2">
            <button class="btn btn-primary" type="submit">Update</button>
          </div>
        </div>
      </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
