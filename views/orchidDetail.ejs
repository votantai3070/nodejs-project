<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Detail Page</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Font Awesome CSS -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
      rel="stylesheet"
    />
    <!-- Custom CSS -->
    <style>
      /* Add your custom styles here */
      .orchid-image {
        width: 100%;
        height: auto;
      }
      .orchid-name {
        font-weight: bold;
      }
      .orchid-cost {
        color: green;
      }
      .comment-rating {
        color: blue;
      }
      .detail-button {
        width: 100%;
      }
      .comment-box {
        margin-top: 20px;
      }
    </style>
  </head>
  <body>
    <!-- Header -->
    <header>
      <!-- Navbar -->
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
          <!-- Logo -->
          <a class="navbar-brand" href="#">Logo</a>

          <!-- Links on the left side -->
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link" href="/">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/users/orchids">Orchids</a>
              </li>

              <li class="nav-item">
                <a class="nav-link" href="/accounts">Account</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/users/categories">Categories</a>
              </li>
            </ul>
          </div>

          <!-- Links on the right side -->
          <div>
            <% if (user) { %>
            <span>Welcome, <strong><%= user.username %></strong></span>
            <a class="btn btn-outline-danger" href="/users/logout">Logout</a>
            <% } else { %>
            <a class="btn btn-outline-primary me-2" href="/users/login"
              >Login</a
            >
            <a class="btn btn-primary" href="/users/register">Register</a>
            <% } %>
          </div>
        </div>
      </nav>
    </header>

    <!-- Main Content -->
    <main class="container">
      <h1>Detail Page</h1>
      <div class="row justify-content-center">
        <div class="col-9 mb-3">
          <img
            class="orchid-image col-12 mb-3"
            src="<%= orchidData.image %>"
            alt="Orchid Image"
          />
          <div class="orchid-info">
            <h5 class="orchid-name"><%= orchidData.name %></h5>
            <p class="orchid-cost">
              Category: <%= orchidData.category.categoryName %>
            </p>

            <!-- Hiển thị các comment -->
            <% orchidData.comments.forEach(function(comment) { %>
            <div class="card mt-3">
              <div class="card-body">
                <p class="card-text"><%= comment.comment %></p>
                <% if (comment.author && comment.author.username) { %>
                <p class="card-text">Author: <%= comment.author.username %></p>
                <% } else { %>
                <p class="card-text">Author: Unknown</p>
                <% } %>
              </div>
            </div>
            <% }) %> <% if (isAuthenticated && !orchidData.comment) { %>
            <form
              id="commentForm"
              action="/users/orchids/comment"
              method="POST"
            >
              <input
                type="hidden"
                name="orchidId"
                value="<%= orchidData._id.toString() %>"
              />
              <div class="comment-box">
                <textarea
                  name="comment"
                  class="form-control"
                  placeholder="Write your comment here..."
                ></textarea>
                <button type="submit" class="btn btn-primary mt-2">
                  Submit Comment
                </button>
              </div>

              <div
                id="commentError"
                class="alert alert-danger"
                style="display: none"
              >
                Bạn đã comment trước đó!
              </div>
            </form>
            <% } %>
          </div>
        </div>
      </div>
    </main>

    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
