<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Profile Page</title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
      rel="stylesheet"
    />

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
    />

    <style>
      body {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }
      .footer {
        margin-top: auto;
      }

      .register-form {
        margin-top: 50px;
      }
      .register-form img {
        max-width: 100%;
      }
      .register-form h1 {
        margin-bottom: 30px;
      }
      .register-form .form-group {
        margin-bottom: 20px;
      }
    </style>
  </head>
  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
          <a class="navbar-brand" href="#">Logo</a>

          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link" href="/">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/users/orchids">Orchids</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/accounts">Account</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/users/categories">Categories</a>
              </li>
            </ul>
          </div>

          <div>
            <% if (user) { %>
            <span
              >Welcome,
              <strong
                ><a href="/users/profile"><%= user.username %></a></strong
              ></span
            >
            <a class="btn btn-outline-danger" href="/users/logout">Logout</a>
            <% } else { %>
            <a class="btn btn-outline-primary me-2" href="/users/login"
              >Login</a
            >
            <a class="btn btn-primary" href="/users/register">Register</a>
            <% } %>
          </div>
        </div>
      </nav>
    </header>

    <main class="container">
      <div class="row register-form">
        <div class=""></div>
        <div class="col-md-12">
          <h1 class="display-4">Manage Account</h1>
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th></th>
                  <th>Username</th>
                  <th>Name</th>
                  <th>Year of Birth</th>
                  <th>Admin</th>
                </tr>
              </thead>
              <tbody>
                <% userData.forEach(user => { %>
                <tr>
                  <% if (user && user.username === currentUser.username) { %>
                  <td><i class="fas fa-hand-point-right"></i></td>
                  <% } else { %>
                  <td></td>
                  <!-- Nếu không trùng khớp, không hiển thị biểu tượng -->
                  <% } %>
                  <td><%= user.username %></td>
                  <td><%= user.name %></td>
                  <td><%= user.YOB %></td>
                  <td><%= user.isAdmin ? 'Yes' : 'No' %></td>
                </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </main>

    <footer class="footer py-3 bg-light">
      <div class="container text-center">
        <span class="text-muted">Footer content here</span>
      </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
