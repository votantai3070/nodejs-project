<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>List Orchid</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
    />
  </head>
  <body>
    <header>
      <!-- Navbar -->
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
          <!-- Logo -->
          <a class="navbar-brand" href="#">Logo</a>

          <!-- Links on the left side -->
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link" href="/">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/users/orchids">Orchids</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/accounts">Account</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/users/categories">Categories</a>
              </li>
            </ul>
          </div>

          <!-- Links on the right side -->
          <div>
            <% if (user) { %>
            <span>Welcome, <strong><%= user.username %></strong></span>
            <a class="btn btn-outline-danger" href="/users/logout">Logout</a>
            <% } else { %>
            <a class="btn btn-outline-primary me-2" href="/users/login"
              >Login</a
            >
            <a class="btn btn-primary" href="/users/register">Register</a>
            <% } %>
          </div>
        </div>
      </nav>
    </header>

    <div class="container-fluid">
      <div class="container">
        <div class="row">
          <button
            type="button"
            class="btn btn-primary col-lg-2 my-5"
            data-bs-toggle="modal"
            data-bs-target="#myModal"
          >
            Create Form
          </button>
          <div
            class="modal fade"
            id="myModal"
            tabindex="-1"
            aria-labelledby="exampleModalLabel"
            aria-hidden="true"
          >
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">
                    Create Orchid
                  </h5>
                  <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="modal"
                    aria-label="Close"
                  ></button>
                </div>
                <div class="modal-body">
                  <form method="POST">
                    <div class="mb-3">
                      <label for="name" class="form-label">Name</label>
                      <input
                        type="text"
                        class="form-control"
                        id="name"
                        placeholder="Name of Orchid"
                        name="name"
                        required
                      />
                    </div>
                    <div class="mb-3">
                      <label for="image" class="form-label">Image</label>
                      <input
                        type="text"
                        class="form-control"
                        id="image"
                        placeholder="URL"
                        name="image"
                        required
                      />
                    </div>
                    <div class="mb-3">
                      <label for="price" class="form-label">Price</label>
                      <input
                        type="number"
                        class="form-control"
                        id="price"
                        placeholder="Price input"
                        name="price"
                        required
                      />
                    </div>
                    <div class="mb-3">
                      <label for="original" class="form-label">Original</label>
                      <input
                        type="text"
                        class="form-control"
                        id="original"
                        placeholder="Original input"
                        name="original"
                        required
                      />
                    </div>
                    <div class="mb-3">
                      <label for="category" class="form-label">Category</label>
                      <select
                        class="form-select"
                        name="category"
                        id="category"
                        required
                      >
                        <% categories.forEach(function(category){ %>
                        <option value="<%= category._id %>">
                          <%= category.categoryName %>
                        </option>
                        <% }) %>
                      </select>
                    </div>

                    <div class="mb-3">
                      <label for="isNatural" class="form-label">Natural</label>
                      <select
                        class="form-select"
                        name="isNatural"
                        id="isNatural"
                      >
                        <option value="true">Yes</option>
                        <option value="false">No</option>
                      </select>
                    </div>
                    <button type="submit" class="btn btn-primary">
                      Create
                    </button>
                  </form>
                </div>
              </div>
            </div>
          </div>
          <div>
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">Name</th>
                  <th scope="col">Image</th>
                  <th scope="col">Price</th>
                  <th scope="col">Original</th>
                  <th scope="col">Category</th>
                  <th scope="col">Natural</th>
                  <th scope="col">Action</th>
                </tr>
              </thead>
              <tbody>
                <% orchidData.forEach(function(orchid){ %>
                <tr class="orchid-row" data-id="<%= orchid.id %>">
                  <td><%= orchid.name %></td>
                  <td>
                    <figure class="figure">
                      <img
                        class="object-fit-contain border rounded"
                        src="<%= orchid.image %>"
                        alt="Orchid Image"
                        style="width: 50px; height: 50px"
                      />
                    </figure>
                  </td>
                  <td><%= orchid.price %></td>
                  <td><%= orchid.original %></td>
                  <td>
                    <% if (orchid.category) { %> <%=
                    orchid.category.categoryName %> <% } else { %> N/A <% } %>
                  </td>
                  <td><%= orchid.isNatural ? 'Yes' : 'No' %></td>
                  <td>
                    <div class="d-flex position-relative">
                      <div class="position-absolute top-100 start-0 actions">
                        <a
                          href="/users/orchid/update/<%= orchid.id %>"
                          class="btn btn-warning btn-sm"
                          >Edit</a
                        >
                        <button
                          type="button"
                          class="btn btn-danger btn-sm"
                          data-bs-toggle="modal"
                          data-bs-target="#deleteModal<%= orchid.id %>"
                        >
                          Delete
                        </button>
                      </div>
                    </div>
                  </td>
                </tr>
                <div
                  class="modal fade"
                  id="deleteModal<%= orchid.id %>"
                  tabindex="-1"
                  aria-labelledby="deleteModalLabel"
                  aria-hidden="true"
                >
                  <div class="modal-dialog">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title" id="deleteModalLabel">
                          Confirmation
                        </h5>
                        <button
                          type="button"
                          class="btn-close"
                          data-bs-dismiss="modal"
                          aria-label="Close"
                        ></button>
                      </div>
                      <div class="modal-body">
                        Do you want to delete this orchid <%= (orchid.name) %>?
                      </div>
                      <div class="modal-footer">
                        <button
                          type="button"
                          class="btn btn-secondary"
                          data-bs-dismiss="modal"
                        >
                          Cancel
                        </button>
                        <a href="delete/<%= orchid.id %>" class="btn btn-danger"
                          >Delete</a
                        >
                      </div>
                    </div>
                  </div>
                </div>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const form = document.querySelector("form");

        form.addEventListener("submit", function (event) {
          if (!validateForm()) {
            event.preventDefault();
          }
        });

        function validateForm() {
          const name = document.getElementById("name").value.trim();
          const image = document.getElementById("image").value.trim();
          const price = parseFloat(
            document.getElementById("price").value.trim()
          );
          const original = document.getElementById("original").value.trim();
          const color = document.getElementById("color").value.trim();
          const isNatural = document.getElementById("isNatural").value;

          const existingNames = Array.from(
            document.querySelectorAll(".orchid-row td:first-child")
          ).map((td) => td.textContent.trim());

          if (existingNames.includes(name)) {
            alert(
              "Name must be unique. Another orchid with the same name already exists!"
            );
            return false;
          }

          if (price <= 0) {
            alert("Price must be a positive number");
            return false;
          }
          return true;
        }
      });
    </script>
  </body>
</html>
